{
    "name": "@baize-ui/workspace",
    "version": "1.0.0",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "lint": "eslint \"{packages,apps}/**/*.{js,jsx,ts,tsx}\"",
        "spellcheck": "cspell lint --dot --gitignore --color --cache --show-suggestions \"(packages|apps)/**/*.@(html|js|cjs|mjs|ts|tsx|css|scss|md)\"",
        "typecheck": "tsc --noEmit",
        "graph": "madge --extensions ts --ts-config tsconfig.json packages/*/src",
        "commit": "git-cz",
        "prepare": "husky"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-git"
        }
    },
    "lint-staged": {
        "*.{md,json}": [
            "prettier --cache --write --no-error-on-unmatched-pattern"
        ],
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --cache --parser=typescript --write"
        ]
    },
    "keywords": [],
    "author": "isteyft",
    "license": "MIT",
    "description": "",
    "dependencies": {
        "@baize-ui/hooks": "workspace:*",
        "@baize-ui/theme": "workspace:*",
        "@baize-ui/utils": "workspace:*",
        "baize-ui": "workspace:*",
        "lodash-es": "^4.17.22",
        "vue": "^3.5.25"
    },
    "devDependencies": {
        "@commitlint/cli": "19.8.1",
        "@commitlint/config-conventional": "19.8.1",
        "@eslint/js": "9.35.0",
        "@testing-library/react": "16.3.0",
        "@types/lodash-es": "^4.17.12",
        "@types/node": "24.3.1",
        "@typescript-eslint/eslint-plugin": "8.43.0",
        "@vitejs/plugin-vue": "^5.2.4",
        "@vitejs/plugin-vue-jsx": "^3.1.0",
        "@vitest/coverage-istanbul": "^3.2.4",
        "@vue/tsconfig": "^0.5.1",
        "commitizen": "4.3.1",
        "coveralls": "3.1.1",
        "cross-env": "10.0.0",
        "cspell": "9.2.1",
        "cz-git": "1.12.0",
        "eslint": "9.35.0",
        "eslint-plugin-simple-import-sort": "12.1.1",
        "globals": "16.3.0",
        "husky": "9.1.7",
        "jsdom": "26.1.0",
        "lint-staged": "16.1.6",
        "postcss-color-mix": "^1.1.0",
        "postcss-each": "^1.1.0",
        "postcss-each-variables": "^0.3.0",
        "postcss-for": "^2.1.1",
        "postcss-nested": "^6.2.0",
        "prettier": "3.6.2",
        "turbo": "2.5.6",
        "typescript": "^5.9.3",
        "typescript-eslint": "8.43.0",
        "vite": "^5.4.21",
        "vitest": "3.2.4",
        "vue-tsc": "^1.8.27"
    }
}
