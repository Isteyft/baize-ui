{
    "compilerOptions": {
        "target": "ES2015",
        "lib": ["DOM", "ESNext"],
        "allowJs": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "paths": {
            "@baize/*": ["./packages/@baize/*/src"]
        }
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Base",
    "include": ["packages/**/*"],
    "exclude": ["packages/cli/templates"]
}
